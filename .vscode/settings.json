{
  // NEEDED for Intellisense to work with OpenCV
  // VSCode will throw errors for cv2 functions without this
  // Code will run fine regardless
  "pylint.args": ["--generated-members=cv2.*"],

  // Personal preferences
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/__pycache__": true
  }
}
